@file:JvmName("JDoodle")
fun main() 
{
    println("Введіть кут у радіанах:")
    val input = readln()
    val rad = input.toInt()
    val radText = when (rad) 
    {
        0 -> "нуль"
        1 -> "один"
        2 -> "два"
        3 -> "три"
        4 -> "чотири"
        5 -> "п'ять"
        6 -> "шість"
        7 -> "сім"
        8 -> "вісім"
        9 -> "дев'ять"
        10 -> "десять"
        11 -> "одинадцять"
        12 -> "дванадцять"
        13 -> "тринадцять"
        14 -> "чотирнадцять"
        15 -> "п'ятнадцять"
        16 -> "шістнадцять"
        17 -> "сімнадцять"
        18 -> "вісімнадцять"
        19 -> "дев'ятнадцять"
        20 -> "двадцять"
        30 -> "тридцять"
        40 -> "сорок"
        50 -> "п'ятдесят"
        60 -> "шістдесят"
        70 -> "сімдесят"
        80 -> "вісімдесят"
        90 -> "дев'яносто"
        100 -> "сто"
        else -> {
            val tens = (rad / 10) * 10
            val units = rad % 10
            val tensText = when (tens) 
            {
                20 -> "двадцять"
                30 -> "тридцять"
                40 -> "сорок"
                50 -> "п'ятдесят"
                60 -> "шістдесят"
                70 -> "сімдесят"
                80 -> "вісімдесят"
                90 -> "дев'яносто"
                else -> ""
            }
            val unitsText = when (units) 
            {
                1 -> "один"
                2 -> "два"
                3 -> "три"
                4 -> "чотири"
                5 -> "п'ять"
                6 -> "шість"
                7 -> "сім"
                8 -> "вісім"
                9 -> "дев'ять"
                else -> ""
            }
            if (tensText.isNotEmpty() && unitsText.isNotEmpty()) 
            {
                "$tensText $unitsText"
            } 
            else 
            {
                rad.toString() 
            }
        }
    }
    println("$radText радіан")
}


